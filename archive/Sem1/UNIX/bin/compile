#!/bin/bash

if (( $# == 0 )); then
	echo >&2 "No argument is specified"
	exit 1
elif (( $# == 1 )); then
	if [[ -f $1 ]]; then
		FILE=$1
		PROGRAM=`echo $FILE | rev | cut -d. -f 2- | rev`
		LANGUAGE=`echo $FILE | awk -F. '{print $NF}'`
	elif [[ $1 == "-h" || $1 == "-?" || $1 == "--help" ]]; then
		SCRIPTNAME=`echo $0 | awk -F/ '{print $NF}'`
		cat $HOME/bin/.$SCRIPTNAME.help
		exit
	else
		echo >&2 "The argument is not a file"
		exit 2
	fi
elif (( $# == 2 )); then
	if [[ $1 == "-c" ]]; then
		LANGUAGE='c'
	elif [[ $1 == "-cpp" ]]; then
		LANGUAGE='cpp'
	else
		echo >&3 "The option is not recognised"
		exit 3
	fi
	
	if [[ -f $2 ]]; then
		FILE=$2
		PROGRAM=`echo $FILE | rev | cut -d. -f 2- | rev`
	else
		echo >&2 "The argument is not a file"
		exit 2
	fi
else
	echo >&2 "Too many arguments"
	exit 4
fi

if [[ $LANGUAGE == "cpp" ]]; then
	g++ -std=c++11 -O2 -Wall -o $PROGRAM.out $FILE -lm
elif [[ $LANGUAGE == "c" ]]; then
	gcc -std=c11 -O2 -Wall -Werror=implicit-function-declaration -o $PROGRAM.out $FILE -lm
else
	echo >&2 "The language is not recognised"
	exit 5
fi
