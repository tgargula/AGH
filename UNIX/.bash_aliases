# lists all text shortcuts (scripts & aliases)
alias shortcuts='clear && cat ~/bin/.listOfAliases.txt | less'

# alias for Firefox
alias f='echo "Launching Firefox..." && /usr/bin/firefox &'
alias firefox='/usr/bin/firefox &'

# overloading spotify command
alias spotify='/usr/bin/spotify &'

# alias for LaTeX editor
alias latex='/usr/bin/gummi &'

# overloading steam command
alias steam='steam &'

# alias for Mozilla Thunderbird
alias thunderbird='/usr/bin/thunderbird 2>/dev/null 1>/dev/null &'

# alias for suspend
alias suspend='off --suspend'

# alias for AGH VPN
alias vpnagh='sudo openvpn ~/Documents/AGH/vpn/VPN-AGH.2020.ovpn'

# browser shortcuts section
alias excel='office excel'
alias fb='$BROWSER https://www.facebook.com/ &'
alias facebook='fb'
alias geogebra='$BROWSER https://www.geogebra.org/graphing &'
alias github='$BROWSER https://github.com/tomgar7/ProgramySem1 &'
alias gmail='google mail'
alias mail='$BROWSER https://poczta.agh.edu.pl &'
alias maps='$BROWSER https://www.google.com/maps &'
alias messenger='ms'
alias ms='$BROWSER https://www.messenger.com &'
alias powerpoint='office powerpoint'
alias udemy='$BROWSER https://www.udemy.com/ &'
